@model List<Expense.Application.ModelViews.UserDto>

@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int i = 1;
}

<div class="pagetitle">
    <h1>Security</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Security</a></li>
            <li class="breadcrumb-item active">User List</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<div class="col-12">
    <div class="card recent-sales overflow-auto">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">
                @TempData["message"]
            </div>
        }
        <div class="card-body">
            <h5 class="card-title">Recent User <span>| </span> <a class="btn btn-primary btn-sm" href="@Url.Action("AddUser", "Security", new { Area = "Admin" })"><i class="bi bi-plus"></i> Add New User</a> </h5>

            <table class="table table-borderless datatable">
                <thead style="font-size:15px;">
                    <tr>
                        <th>#</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageName))
                                {
                                    <img src="@Url.Action("Image", "Security", new { area = "Admin", fileName = item.ImageName })"
                                         alt="User Image" style="width:40px; height:40px; object-fit:cover; border-radius:50%;" />
                                }
                                else
                                {
                                    <img src="~/images/default-avatar.png" alt="No Image" style="width:40px; height:40px; object-fit:cover; border-radius:50%;" />
                                }
                            </td>
                            <td>@item.UserName</td>
                            <td>@item.UserEmail</td>
                            <td>@item.UserPhone</td>
                            <td>
                                @{
                                    var status = item.IsActive == "1" ? "Active" : "In-active";
                                    var color = item.IsActive == "1" ? "bg-success" : "bg-danger";
                                }
                               
                                <span class="badge @color">@status</span>
                            </td>
                            <td>
                                <a href="@Url.Action("EditUser", "Security", new { area = "Admin", id = item.UserId })"><i class="bi bi-pencil"></i></a>
                                <a href="@Url.Action("DeleteUser", "Security", new { area = "Admin", id = item.UserId })"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                        i++;
                    }

                </tbody>
            </table>

        </div>

    </div>
</div><!-- End Recent Sales -->