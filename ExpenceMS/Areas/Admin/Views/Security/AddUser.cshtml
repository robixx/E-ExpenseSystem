@model Expense.Application.ModelViews.UserDto

@{
    ViewData["Title"] = "User Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<style>
    .profile-card {
        max-width: 820px;
        margin: 3rem auto;
    }

    .avatar-block {
        background: #ebedef;
        border-radius: .75rem 0 0 .75rem;
    }

    .avatar {
        width: 140px;
        height: 140px;
        object-fit: cover;
    }
</style>

<div class="pagetitle">
    <h1>Security</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Security</a></li>
            <li class="breadcrumb-item active">User Create</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<div class="col-12">
    <div class="card shadow-sm">

        <form asp-action="AddUser" asp-controller="Security" asp-area="Admin" method="post" enctype="multipart/form-data">
            <div class="row g-0">
                <!-- LEFT: avatar block -->
                <div class="col-md-4 avatar-block d-flex flex-column align-items-center justify-content-center p-4">
                    <div class="position-relative">
                        <img src="https://via.placeholder.com/300" alt="Avatar" class="rounded-circle avatar" id="avatarImg">
                        <!-- cyclic upload btn -->
                        <label class="btn btn-light btn-sm position-absolute bottom-0 end-0 rounded-circle"
                               for="imgUpload" style="width:36px;height:36px;">
                            <i class="bi bi-camera"></i>
                        </label>
                        <input type="file" id="imgUpload" name="image" accept="image/*" hidden
                               onchange="document.getElementById('avatarImg').src=window.URL.createObjectURL(this.files[0])">
                    </div>
                    <div class="mt-3 text-center">
                        @*   <div class="fw-semibold" id="fullNameLabel">Alexa Rowles</div> *@
                        <div class="small text-muted">Full Name</div>
                    </div>
                </div>

                <!-- RIGHT: fields block -->
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="card-title text-center">  <h5 class="mb-4">User Profile Create</h5> </div>


                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">User Name</label>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Your User Name", required = "required" })
                            </div>
                            <!-- Last Name -->
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-control", placeholder = "Your Email", type = "email" })
                            </div>
                        </div>
                        <div class="row mb-2">
                            <!-- Nick Name -->
                            <div class="col-md-6">
                                <label class="form-label">Mobile</label>
                                @Html.TextBoxFor(m => m.UserPhone, new { @class = "form-control", placeholder = "Your Mobile Number" })
                            </div>
                            <!-- Gender -->
                            <div class="col-md-6">
                                <label class="form-label">Gender</label>
                                @Html.DropDownListFor(model => model.Gender, ViewBag.gender as List<SelectListItem>, " Select Gender ", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row mb-2">
                            <!-- Country -->
                            <div class="col-md-6">
                                <label class="form-label">Status</label>
                                @Html.DropDownListFor(model => model.IsActive, ViewBag.Status as List<SelectListItem>, "  Select Status  ", new { @class = "form-control" })
                            </div>
                            <!-- Language -->
                            <div class="col-md-6">
                                <label class="form-label">Family Member</label>
                                @Html.TextBoxFor(m => m.FamilyMenber, new { @class = "form-control", type = "number" })
                            </div>
                        </div>
                        <div class="row mb-2">
                            <!-- Time Zone -->
                            <div class="col-md-6">
                                <label class="form-label">Date Time</label>
                                @Html.TextBoxFor(m => m.CreateDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">Login User Name</label>
                                @Html.TextBoxFor(m => m.LoginName, new { @class = "form-control", placeholder = "Enter your Login name", required = "required" })
                            </div>
                            <!-- Last Name -->
                            <div class="col-md-6">
                                <label class="form-label">Password</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password", required = "required" })
                            </div>
                        </div>



                        <!-- Submit -->
                        <div class="col-12 text-center mt-4">
                            <button class="btn btn-primary px-4" type="submit">Save Changes</button>
                        </div>


                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
