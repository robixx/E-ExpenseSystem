@model Expense.Application.ModelViews.UserDto

@{
    ViewData["Title"] = "User Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<style>
    .profile-card {
        max-width: 820px;
        margin: 3rem auto;
    }

    .avatar-block {
        background:#ebedef;
        border-radius: .75rem 0 0 .75rem;
    }

    .avatar {
        width: 140px;
        height: 140px;
        object-fit: cover;
    }
</style>

<div class="pagetitle">
    <h1>Security</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Security</a></li>
            <li class="breadcrumb-item active">User Create</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<div class="col-12">
    <div class="card shadow-sm">
        
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row g-0">
                <!-- LEFT: avatar block -->
                <div class="col-md-4 avatar-block d-flex flex-column align-items-center justify-content-center p-4">
                    <div class="position-relative">
                        <img src="https://via.placeholder.com/300" alt="Avatar" class="rounded-circle avatar" id="avatarImg">
                        <!-- cyclic upload btn -->
                        <label class="btn btn-light btn-sm position-absolute bottom-0 end-0 rounded-circle"
                               for="imgUpload" style="width:36px;height:36px;">
                            <i class="bi bi-camera"></i>
                        </label>
                        <input type="file" id="imgUpload" accept="image/*" hidden
                               onchange="document.getElementById('avatarImg').src=window.URL.createObjectURL(this.files[0])">
                    </div>
                    <div class="mt-3 text-center">
                        <div class="fw-semibold" id="fullNameLabel">Alexa Rowles</div>
                        <div class="small text-muted">Full Name</div>
                    </div>
                </div>

                <!-- RIGHT: fields block -->
                <div class="col-md-8">
                    <div class="card-body">   
                        <div class="card-title text-center">  <h5 class="mb-4">User Profile Create</h5> </div>
                                                   

                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">User Name</label>
                                <input type="text" name="UserName" value="@Model.UserName" class="form-control" required>
                            </div>
                            <!-- Last Name -->
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input type="text" name="email" class="form-control" value="@Model.UserEmail">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <!-- Nick Name -->
                            <div class="col-md-6">
                                <label class="form-label">Mobile</label>
                                <input type="text" class="form-control" placeholder="Your Nick Name">
                            </div>
                            <!-- Gender -->
                            <div class="col-md-6">
                                <label class="form-label">Gender</label>
                                <select class="form-select">
                                    <option selected disabled>Select Gender</option>
                                    <option>Female</option>
                                    <option>Male</option>
                                    <option>Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-2">
                            <!-- Country -->
                            <div class="col-md-6">
                                <label class="form-label">Status</label>
                                <select class="form-select">
                                    <option selected disabled>Select</option>
                                    <option>Active</option>
                                    <option>In-Active</option>
                                    
                                </select>
                            </div>
                            <!-- Language -->
                            <div class="col-md-6">
                                <label class="form-label">Family Member</label>
                                <input type="text" class="form-control" value="2">
                            </div>
                        </div>
                        <div class="row mb-2">
                            <!-- Time Zone -->
                            <div class="col-md-6">
                                <label class="form-label">Date Time</label>
                                <input type="datetime" class="form-control" >
                            </div>
                            
                        </div>

                   

                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Login User Name</label>
                                    <input type="text" class="form-control" value="Alexa">
                                </div>
                                <!-- Last Name -->
                                <div class="col-md-6">
                                    <label class="form-label">Password</label>
                                    <input type="text" class="form-control" value="Rowles">
                                </div>
                            </div>
                     


                        <!-- Submit -->
                        <div class="col-12 text-center mt-4">
                            <button class="btn btn-primary px-4" type="submit">Save Changes</button>
                        </div>


                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
