                        </a>
                        <a href="@Url.Action("CategoryAdd", "Category", new { Area = "Admin" }) " class="@(area == "Admin" && controller == "Category" && action == "CategoryAdd" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>Add Category</span>
                        </a>
                    </li>

                </ul>
            </li><!-- End Icons Nav -->
        
            <li class="nav-item">
                <a class="nav-link @(controller == "Expense" ? "" : "collapsed")" data-bs-target="#tables-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-journal-text"></i><span>Expense</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="tables-nav" class="nav-content collapse @(controller == "Expense" ? "show" : "") " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="@Url.Action("ExpenseAdd", "Expense", new { Area = "Admin" }) " class="@(area == "Admin" && controller == "Expense" && action == "ExpenseAdd" ? "active" : "")">
                            <i class="bi bi-circle"></i><span>Add</span>
                        </a>
                       
